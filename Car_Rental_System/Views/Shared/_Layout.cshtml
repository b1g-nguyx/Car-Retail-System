<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car Rental System</title>
    <script type="importmap"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.min.css">
    @Html.Partial("_PartialScripts")
</head>

<body class="bg-gray-100">
    <header>
        <nav class="bg-blue-500 shadow-md">
            <div class="container mx-auto flex justify-between items-center p-4">
                <a class="text-white text-xl font-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    Hệ thống thuê xe
                </a>
                <button class="text-white md:hidden" id="menu-toggle">
                    ☰
                </button>
                <div class="hidden md:flex space-x-4" id="menu">
                    <a class="text-white hover:underline" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    <a class="text-white hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mx-auto p-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.min.js"></script>
    <script>
        document.getElementById('menu-toggle').addEventListener('click', function() {
            document.getElementById('menu').classList.toggle('hidden');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>