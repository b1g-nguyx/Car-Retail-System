@model Car_Rental_System.ViewModels.BrandViewModel

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Xác nhận xóa thương hiệu";
}

<div class="container mx-auto mt-4 px-4">
    <div class="flex flex-wrap -mx-4">
        <!-- Cột trái: Hiển thị thông tin thương hiệu -->
        <div class="w-full md:w-2/3 px-4">
            <h2 class="text-red-600 text-2xl font-bold">Xác nhận xóa thương hiệu</h2>
            <hr class="my-4 border-gray-300" />
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <dt class="font-semibold">Tên thương hiệu:</dt>
                <dd>@Model.Brand.Name</dd>

                <dt class="font-semibold">ID:</dt>
                <dd>@Model.Brand.Id</dd>

                <dt class="font-semibold">Hình ảnh:</dt>
                <dd>
                    @if (Model.Images.Any())
                    {
                        <div class="flex flex-wrap gap-2">
                            @foreach (var item in Model.Images)
                            {
                                <img src="@item.ImageUrl" class="w-30 h-auto border rounded-md" />
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-gray-500">Không có hình ảnh.</p>
                    }
                </dd>
            </dl>
        </div>

        <!-- Cột phải: Nút xác nhận xóa -->
        <div class="w-full md:w-1/3 px-4">
            <div class="border border-red-500 p-6 rounded-lg text-center">
                <h4 class="text-red-600 text-lg font-bold">Bạn có chắc chắn muốn xóa?</h4>
                <p class="text-gray-500">Thao tác này không thể hoàn tác.</p>
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="@Model.Brand.Id" />
                    <button type="submit" class="bg-red-600 text-white w-full py-2 rounded-lg hover:bg-red-700 transition">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </button>
                    <a asp-action="Index" class="block mt-2 bg-gray-500 text-white w-full py-2 rounded-lg hover:bg-gray-600 transition">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
