@model Car_Rental_System.ViewModels.ChangePasswordViewModel

@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Đổi Mật Khẩu";
}

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar Menu -->
       <div class="col-md-3">
            <div class="list-group shadow-lg">
                <a href="#" class="list-group-item list-group-item-action active">
                    <i class="fas fa-user"></i> Profile Overview
                </a>
                <a asp-action="Edit" asp-route-UserId="@Model.UserId" class="list-group-item list-group-item-action">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
                <a asp-action="ChangePassword" class="list-group-item list-group-item-action">
                    <i class="fas fa-key"></i> Change Password
                </a>
                <a asp-action="ContractHistory" class="list-group-item list-group-item-action">
                    <i class="fas fa-car"></i> Lịch sử hợp đồng
                </a>
                <a asp-action="CurrentContract" class="list-group-item list-group-item-action">
                    <i class="fas fa-car"></i> Hợp đồng hiện tại
                </a>
                <form method="Post" asp-action="Logout" asp-controller="Account">
                    <button type="submit" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </div>

        <!-- Change Password Form -->
        <div class="col-md-9">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white text-center" style="background-color: #D19C97;">
                    <strong>Đổi Mật Khẩu</strong>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <input type="hidden" asp-for="UserId" value="UserId">
                        @if (ViewBag.NotTrue == null)
                        {
                            <div class="form-group">
                                <label asp-for="OldPassword" class="font-weight-bold"></label>
                                <input asp-for="OldPassword" class="form-control rounded border" type="password" />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>
                        }
                        <div class="form-group mt-3">
                            <label asp-for="NewPassword" class="font-weight-bold"></label>
                            <input asp-for="NewPassword" class="form-control rounded border" type="password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="ConfirmNewPassword" class="font-weight-bold"></label>
                            <input asp-for="ConfirmNewPassword" class="form-control rounded border" type="password" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-block mt-4 text-white" style="background-color: #D19C97;">
                            <i class="fa fa-save"></i> Cập Nhật Mật Khẩu
                        </button>

                        <div class="text-danger mt-3">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
