@model Car_Rental_System.Models.Profile

@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Profile";
}
<div class="container mt-5">
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back
    </a>
    <div class="row">
        <!-- Sidebar -->

        <div class="col-md-3">
            <div class="list-group shadow-lg">
                <a href="#" class="list-group-item list-group-item-action active">
                    <i class="fas fa-user"></i> Profile Overview
                </a>
                <a asp-action="Edit" asp-route-UserId="@Model.UserId" class="list-group-item list-group-item-action">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
                <a asp-action="ChangePassword" class="list-group-item list-group-item-action">
                    <i class="fas fa-key"></i> Change Password
                </a>
                <a asp-action="ContractHistory" class="list-group-item list-group-item-action">
                    <i class="fas fa-car"></i> Lịch sử hợp đồng
                </a>
                <a asp-action="CurrentContract" class="list-group-item list-group-item-action">
                    <i class="fas fa-car"></i> Hợp đồng hiện tại
                </a>
                <form method="Post" asp-action="Logout" asp-controller="Account">
                    <button type="submit" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </div>

        <!-- Main Profile Section -->
        <div class="col-md-9">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>User Profile</h3>
                </div>
                @if(Model.IsConfirm != true){
                    <div>
                        <p class="text-danger"> Tài khoản chưa được xác thực*</p>
                    </div>
                }else{
                     <div>
                        <p class="text-success"> Tài khoản đã được xác thực*</p>
                    </div>
                }
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@(Model.AvatarUrl ?? "")" class="rounded-circle" alt="User Avatar" width="150"
                            height="150">
                    </div>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Full Name</th>
                                <td>@(Model.FullName ?? "")</td>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <td>@(Model.Address ?? "")</td>
                            </tr>
                            <tr>
                                <th>Phone Number</th>
                                <td>@(Model.PhoneNumber ?? "")</td>
                            </tr>
                            <tr><th>Giấy phép lái xe</th>
                                <td class="text-center mb-4">
                                    <img src="@(Model.DrivingLicense ?? "")" class="img-fluid" alt="User Avatar"
                                        width="150" height="150">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center mt-3">
                        <a asp-action="Edit" asp-route-UserId="@Model.UserId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
