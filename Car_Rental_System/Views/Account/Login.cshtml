@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .login-card {
            background: #fff;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            border: 2px solid #D19C97;
        }
        .login-card:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }
        .btn-custom {
            background-color: #D19C97;
            border: none;
        }
        .btn-custom:hover {
            background-color: #c08a83;
        }
        .form-control:focus {
            border-color: #D19C97;
            box-shadow: 0 0 0 0.2rem rgba(209, 156, 151, 0.25);
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="login-card w-25">
        <h2 class="text-center mb-4" style="color: #D19C97;">Đăng nhập</h2>
        <form method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                    <label class="form-check-label" for="rememberMe">Nhớ đăng nhập</label>
                </div>
                <a href="@Url.Action("ForgotPassword","Account")" class="text-decoration-none" style="color: #D19C97;">Quên mật khẩu?</a>
            </div>
            <button type="submit" class="btn btn-custom w-100 text-white">Đăng nhập</button>
        </form>
        <div class="text-center mt-3">
            <span>Hoặc đăng nhập bằng</span>
        </div>
        <div class="d-flex justify-content-center gap-3 mt-2">
            <a asp-action="LoginWithGoogle" asp-controller="Account" class="btn btn-danger w-50"><i class="bi bi-google"></i> Google</a>
            <a asp-action="LoginWithFacebook" asp-controller="Account" class="btn btn-primary w-50"><i class="bi bi-facebook"></i> Facebook</a>
        </div>
        <div class="text-center mt-3">
            <span>Bạn chưa có tài khoản? <a href="@Url.Action("Register","Account")" style="color: #D19C97;">Đăng ký ngay</a></span>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>