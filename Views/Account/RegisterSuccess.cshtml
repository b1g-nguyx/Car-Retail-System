@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký thành công</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .success-card {
            background: #fff;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 2px solid #D19C97;
            text-align: center;
        }
        .btn-custom {
            background-color: #D19C97;
            border: none;
        }
        .btn-custom:hover {
            background-color: #c08a83;
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="success-card w-25">
        <h2 class="text-success">🎉 Đăng ký thành công!</h2>
        <p>Vui lòng kiểm tra email của bạn để xác nhận tài khoản.</p>
        <a href="@Url.Action("Login", "Account")" class="btn btn-custom w-100 text-white">Đăng nhập</a>
    </div>
</body>
</html>
